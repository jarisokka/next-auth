{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "prettier.tabWidth": 2,
    "prettier.semi": true,
    "prettier.singleQuote": false,
    "prettier.trailingComma": "es5"
}